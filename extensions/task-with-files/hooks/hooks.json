{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 $EXTENSION_PATH/scripts/session_start.py",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 $EXTENSION_PATH/scripts/pre_tool_use.py",
            "env": {
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "read_file",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $EXTENSION_PATH/scripts/after_read_file.py",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      },
      {
        "matcher": "write_file",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $EXTENSION_PATH/scripts/after_write_file.py",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 $EXTENSION_PATH/scripts/post_tool_use.py",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 $EXTENSION_PATH/scripts/session_end.py",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ]
  }
}
