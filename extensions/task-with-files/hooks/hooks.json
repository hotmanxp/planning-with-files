{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node",
            "args": ["${extensionPath}${/}scripts${/}session-start.js"],
            "cwd": "${extensionPath}",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node",
            "args": ["${extensionPath}${/}scripts${/}pre-tool-use.js"],
            "cwd": "${extensionPath}"
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "read_file",
        "hooks": [
          {
            "type": "command",
            "command": "node",
            "args": ["${extensionPath}${/}scripts${/}after-read-file.js"],
            "cwd": "${extensionPath}",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}"
            }
          }
        ]
      },
      {
        "matcher": "write_file",
        "hooks": [
          {
            "type": "command",
            "command": "node",
            "args": ["${extensionPath}${/}scripts${/}after-write-file.js"],
            "cwd": "${extensionPath}",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}"
            }
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node",
            "args": ["${extensionPath}${/}scripts${/}post-tool-use.js"],
            "cwd": "${extensionPath}",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}"
            }
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node",
            "args": ["${extensionPath}${/}scripts${/}session-stop.js"],
            "cwd": "${extensionPath}",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}"
            }
          }
        ]
      }
    ]
  }
}
