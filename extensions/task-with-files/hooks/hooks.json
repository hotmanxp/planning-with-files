{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "node",
        "args": ["${extensionPath}${/}scripts${/}session-start.js"],
        "cwd": "${extensionPath}",
        "env": {
          "WORKING_DIR_BASE": "${env:TASK_WITH_FILES_WORKING_DIR:${workspacePath}${/}.agent_working_dir}",
          "WORKSPACE_PATH": "${workspacePath}",
          "EXTENSION_PATH": "${extensionPath}"
        }
      }
    ],
    "BeforeTool": [
      {
        "type": "command",
        "command": "node",
        "args": ["${extensionPath}${/}scripts${/}pre-tool-use.js"],
        "cwd": "${extensionPath}",
        "env": {
          "WORKING_DIR_BASE": "${env:TASK_WITH_FILES_WORKING_DIR:${workspacePath}${/}.agent_working_dir}"
        }
      }
    ],
    "AfterTool": [
      {
        "type": "command",
        "command": "node",
        "args": ["${extensionPath}${/}scripts${/}post-tool-use.js"],
        "cwd": "${extensionPath}",
        "env": {
          "WORKING_DIR_BASE": "${env:TASK_WITH_FILES_WORKING_DIR:${workspacePath}${/}.agent_working_dir}",
          "WORKSPACE_PATH": "${workspacePath}"
        }
      }
    ],
    "SessionEnd": [
      {
        "type": "command",
        "command": "node",
        "args": ["${extensionPath}${/}scripts${/}session-stop.js"],
        "cwd": "${extensionPath}",
        "env": {
          "WORKING_DIR_BASE": "${env:TASK_WITH_FILES_WORKING_DIR:${workspacePath}${/}.agent_working_dir}",
          "WORKSPACE_PATH": "${workspacePath}"
        }
      }
    ]
  }
}
