{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/session-start.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/pre-tool-use.js",
            "env": {
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "read_file",
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/after-read-file.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      },
      {
        "matcher": "write_file|edit_file",
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/after-write-file.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/post-tool-use.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/session-end.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ]
  }
}
