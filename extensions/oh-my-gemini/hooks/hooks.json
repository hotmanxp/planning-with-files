{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/session_start.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/pre_tool.js",
            "env": {
              "EXTENSION_PATH": "${extensionPath}",
              "WORKSPACE_PATH": "${workspacePath}"
            }
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "read_file",
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/after_read.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      },
      {
        "matcher": "write_file|edit_file",
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/after_write.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      },
      {
        "matcher": "task",
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/after_task.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${extensionPath}/scripts/session_end.js",
            "env": {
              "WORKSPACE_PATH": "${workspacePath}",
              "EXTENSION_PATH": "${extensionPath}"
            }
          }
        ]
      }
    ]
  }
}
